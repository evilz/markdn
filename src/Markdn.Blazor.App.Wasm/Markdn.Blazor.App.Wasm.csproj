<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Enable generated files output for debugging -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\Generated</CompilerGeneratedFilesOutputPath>
    
    <!-- Markdown to Razor Generator Configuration -->
    <MarkdownPattern>content/**/*.md</MarkdownPattern>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include .md files as additional files for the source generator -->
    <!-- Exclude content directory markdown files since they are processed by the pre-build generator -->
    <AdditionalFiles Include="**\*.md" Exclude="wwwroot\**\*.md;content\**\*.md" />
  </ItemGroup>

  <ItemGroup>
    <!-- Source Generator Reference -->
    <ProjectReference Include="..\Markdn.SourceGenerators\Markdn.SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <!-- Page manifest generation removed: CodeTaskFactory inline tasks are not supported by .NET SDK MSBuild.
       Previously we attempted to generate wwwroot/_page-manifest.json at build time. This approach failed on
       some SDKs (CodeTaskFactory not available). For now, rely on runtime reflection fallback in NavMenu.
       If deterministic build-time manifests are required, consider adding a small dotnet tool or an MSBuild
       task assembly (prebuilt) that can be referenced via UsingTask. -->

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.0" PrivateAssets="all" />
  </ItemGroup>

  <!-- Pre-build target to generate Razor files from Markdown -->
  <Target Name="GenerateRazorFromMarkdown" BeforeTargets="CoreCompile">
    <Message Text="Génération des pages .razor à partir des markdown..." Importance="high" />
    
    <!-- Build the generator tool first -->
    <Exec Command="dotnet build &quot;$(MSBuildThisFileDirectory)..\..\tools\MarkdownToRazorGenerator\MarkdownToRazorGenerator.csproj&quot; -c $(Configuration)"
          WorkingDirectory="$(MSBuildProjectDirectory)" />
    
    <!-- Run the generator tool -->
    <Exec Command="dotnet run --no-build --project &quot;$(MSBuildThisFileDirectory)..\..\tools\MarkdownToRazorGenerator\MarkdownToRazorGenerator.csproj&quot; &quot;$(MSBuildProjectDirectory)&quot; --pattern &quot;$(MarkdownPattern)&quot;"
          WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

  <!-- Link generated .razor files as dependent on their .md source files -->
  <ItemGroup>
    <Content Update="content\**\*.razor">
      <DependentUpon>%(Filename).md</DependentUpon>
    </Content>
  </ItemGroup>

</Project>
