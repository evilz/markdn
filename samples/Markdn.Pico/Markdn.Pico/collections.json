{
  "collections": {
    "posts": {
      "folder": "Content/posts",
      "schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "pubDate": {
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["title", "pubDate"]
      }
    }
  }
}
