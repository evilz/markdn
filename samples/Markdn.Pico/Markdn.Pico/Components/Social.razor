<a
    href="https://www.@Platform\.com/@Username"
    aria-label="Link to my @Platform"
    target="_blank"
    rel="noopener noreferrer"
>@Platform</a>

<style>
  svg {
    width: 1.5em;
    height: 1.5em;
  }
</style>



@code {
    [Parameter]
    public string Platform { get; set; } = "";
   [Parameter]
    public string  Username  { get; set; } = "";

}
