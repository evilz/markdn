@page "/"
@layout BaseLayout

@* import LatestPosts from "@components/LatestPosts.astro"; *@
@* import Featured from "@components/Featured.astro"; *@
@* import RecentProjects from "@components/RecentProjects.astro"; *@
@* import WorkExperiences from "@components/WorkExperiences.astro"; *@
@* import DetailsQuote from "@components/DetailsQuote"; *@

<PageTitle>@pageTitle</PageTitle>

<header>
    <NavigationWrapper />
</header>
<hr />
<main class="container">
    <section>
        <hgroup>
            <h1>@pageTitle</h1>
            <p>... Astro styled with Pico CSS</p>
        </hgroup>
        <p>
            <u><a href="/about/" class="">AstroPico</a></u> is an Astro theme who likes
            simple implementation and good looking visual.
        </p>
        <DetailsQuote client:only="react" />
    </section>
    <hr />
    <section>
        <hgroup>
            <Heading
                Title="Featured"
                H="3"
                Description="... some of finest"
            />
        </hgroup>
        <Featured />
    </section>
    <hr />
    <section>
        <hgroup>
            <Heading
                Title="Latest posts"
                H="3"
                Description="... some of latest"
            />
        </hgroup>
        <LatestPosts />
        <p>
            <small>
                For more posts,
                <a href="/blog/">to here.</a>
            </small>
        </p>
    </section>
    <hr />
    <section>
        <hgroup>
            <Heading Title="Recent projects" H="3" description="" />
        </hgroup>
        <RecentProjects />
        <p>
            <small>
                For my featured projects, please visit my
                <a href="https://www.github.com/san-ghun">Github</a>
            </small>
        </p>
    </section>
    <hr />
    <section>
        <hgroup>
            <Heading Title="Work experience" H="3" Description="" />
        </hgroup>
        <WorkExperiences />
        <p>
            <small>
                If you want to know more about me,
                <!-- If you want to see my resume, -->
                <a href="/about/">to here</a>
            </small>
        </p>
    </section>
    <hr />
</main>

@code
{
    string pageTitle = "Markdn.Pico";
}
