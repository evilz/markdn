@page "/jane-smith"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Jane Smith</PageTitle>

<CascadingValue Value="@_pageMetadata">

<h1 id="jane-smith">Jane Smith</h1>
<p>Full-stack developer and tech advocate focusing on Blazor and cloud technologies.</p>


</CascadingValue>

@code {
    private class PageMetadata
    {
        public string? Title { get; set; }
        public string? Slug { get; set; }
        public string? Route { get; set; }
        public string? Summary { get; set; }
        public DateTime? Date { get; set; }
        public List<string>? Tags { get; set; }
        public Dictionary<string, object>? AdditionalData { get; set; }
    }

    private readonly PageMetadata _pageMetadata = new()
    {
        Title = "Jane Smith",
        Slug = "jane-smith",
        Route = "/jane-smith",
    };

}
