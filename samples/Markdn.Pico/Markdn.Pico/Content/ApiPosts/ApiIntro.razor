@page "/api-intro"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Introduction to Markdn Source Generators</PageTitle>

<CascadingValue Value="@_pageMetadata">

<h1 id="introduction-to-markdn-source-generators">Introduction to Markdn Source Generators</h1>
<p>This post demonstrates the new WebAPI features in Markdn source generators.</p>
<h2 id="features">Features</h2>
<ul>
<li>Type-safe collections</li>
<li>Auto-generated slugs</li>
<li>WebAPI endpoints</li>
<li>Multi-format support</li>
</ul>
<p>The source generator makes it easy to work with content files in your Blazor applications!</p>


</CascadingValue>

@code {
    private class PageMetadata
    {
        public string? Title { get; set; }
        public string? Slug { get; set; }
        public string? Route { get; set; }
        public string? Summary { get; set; }
        public DateTime? Date { get; set; }
        public List<string>? Tags { get; set; }
        public Dictionary<string, object>? AdditionalData { get; set; }
    }

    private readonly PageMetadata _pageMetadata = new()
    {
        Title = "Introduction to Markdn Source Generators",
        Route = "/api-intro",
    };

}
